<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Games</title>
    <style>
      .form-group {
        margin:10px;
      }
    </style>
</head>
<body>
<section id="course-form">
<div class="container-lg">
  <form method="post" action="/create">
    <div class="form-group">
      <label for="exampleFormControlInput1">Game Name</label>
      <input required name ="gamename" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Risk of Rain 2">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Game Genre</label>
      <select name ="gamegenre" class="form-control" id="exampleFormControlSelect1">
        <option value="Roguelike">Roguelike</option>
        <option value="FPS">FPS</option>
        <option value="RPG">RPG</option>
      </select>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Game Description</label>
      <textarea name ="gamedesc" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Game Rating</label>
      <input required name ="gamerating" type="number" min="1.0" max="5.0" step="0.1" class="form-control" id="exampleFormControlInput1" placeholder="4.9">
    </div>
    <div class="form-group">
      <label for="exampleFormControlInput1">Game Price</label>
      <input required name ="gameprice" type="number" min="0.00" max="100.00" step="0.01" class="form-control" id="exampleFormControlInput1" placeholder="29.99">
    </div>
    <div class="form-group">
      <input type="submit" value="Add Game" class="btn btn-primary"></button>
    </div>
  </form>
  <%- include("gamemsg")%>
</div>
</section>
<section id="game-details">
  <div class="container-lg">
    <div class="p-lg-2 text-center bg-light">
      <h1>Games</h1>
    </div>  
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Game Name</th>
          <th scope="col">Game Genre</th>
          <th scope="col">Game Rating</th>
          <th scope="col">Game Price</th>
        </tr>
      </thead>
      <tbody>
        <% for (game of games) { %>
          <tr>
            <td scope="row"><a href=<%= "/"+game.recordid %>><%= game.gamename %></a></td>
            <td><%= game.gamegenre %></td>
            <td><%= game.rating %></td>
            <td><%= game.price %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <%if (!locals.games || games.length == 0) { %>
      <p> No games to list! </p>
      <% } %>
  </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>